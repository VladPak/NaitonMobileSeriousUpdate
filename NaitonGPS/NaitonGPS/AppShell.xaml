<?xml version="1.0" encoding="utf-8" ?>
<Shell 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
    x:Class="NaitonGPS.AppShell"
    xmlns:local="clr-namespace:NaitonGPS.Views"  
    x:Name="appShell">

    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="#e3e3e3" />
                <Setter Property="Shell.TabBarBackgroundColor" Value="#e3e3e3" />
                <Setter Property="Shell.TabBarUnselectedColor" Value="#69717E"/>
                <Setter Property="Shell.TabBarTitleColor" Value="Green"/>

                <Setter Property="Shell.TabBarForegroundColor" Value="Yellow"/>
                <Setter Property="Shell.UnselectedColor" Value="pink" />
                <Setter Property="Shell.ForegroundColor" Value="gray" />
                <Setter Property="Shell.TitleColor" Value="black" />
                <Setter Property="Shell.DisabledColor" Value="Green" />
            </Style>
            <Style TargetType="TabBar" BasedOn="{StaticResource BaseStyle}" />
            <Style TargetType="FlyoutItem" BasedOn="{StaticResource BaseStyle}" />
        </ResourceDictionary>
    </Shell.Resources>
</Shell>